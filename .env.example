# Website Configuration
NEXT_PUBLIC_SITE_URL=https://idir.ai

# Database
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Authentication
SESSION_SECRET=your_session_secret_minimum_32_characters

# n8n Webhooks
N8N_SHARE_WEBHOOK_URL=https://your-n8n-instance.app.n8n.cloud/webhook/generate-post

# Email (Mailgun API)
MAILGUN_API_KEY=testingkey
MAILGUN_DOMAIN=testingkey.com
MAILGUN_API_URL=https://api.eu.mailgun.net

# Mailgun Template (optional - for externalized email template)
# Single template for all languages. Translations are managed in lib/email-translations.ts
MAILGUN_FEEDBACK_TEMPLATE=feedback-survey

# Google Analytics (optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Certificate Configuration
# Upload signature image to Supabase storage (e.g., signatures/instructor-signature.png)
# Recommended: Transparent PNG, approximately 500x150px
NEXT_PUBLIC_INSTRUCTOR_SIGNATURE_URL=https://your-supabase-url/storage/v1/object/public/blog-image/signatures/instructor-signature.png

# App URL (for internal certificate generation)
NEXT_PUBLIC_APP_URL=https://idir.ai
